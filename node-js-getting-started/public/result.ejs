<% layout('layout') -%>
    <div class="sv_main sv_frame sv_default_css">
        <div class="sv_container">
            <div class="sv_body">
                <div class="row">
                    <div class="col-xs-8">
                        <h3><span class="surveyname" id="surveyname"><%=surveyname%></span> Results</h3>
                    </div>
                    <div class="col-xs-4 text-right export-div">
                        <a class="btn btn-primary" href="/result/export/pdf?id=<%=surveyId%>"><span class="fa fa-file-pdf-o"></span> PDF</a>
                        <a class="btn btn-primary" href="/result/export/excel?id=<%=surveyId%>"><span class="fa fa-file-excel-o"></span> Excel</a>
                    </div>
                </div>

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <% for (let item of tableHeader) {%>
                                <th>
                                    <%=item.title !=""?item.title:item.name%>
                                </th>
                                <%}%>
                                    <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let row of tableData) {%>
                            <tr>
                                <%for(let col of row.data){%>
                                    <td>
                                        <%=col%>
                                    </td>
                                    <%}%>
                                        <td>
                                            <button style='min-width: 150px;' onclick="showSurvey('<%=row.id%>');">Show in Survey</button>
                                        </td>

                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="./results.js"></script>
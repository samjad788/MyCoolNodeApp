<% layout('../layout') -%>

    <div class="container bg-white">
        <div class="row p-16">
            <div class="col-sm-offset-1 col-sm-3">
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="/profile/general">General</a></li>
                    <li class="active"><a href="/profile/password">Password</a></li>
                </ul>
            </div>
            <div class="col-sm-7">
                <form class="form-horizontal" action="/profile/password" method="post">
                    <div class="form-group">
                        <label for="password" class="col-sm-3 text-right control-label">Current password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" placeholder="Old Password" required="required" name="password" id="password" value="<%= credentialForm.password %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="newpassword" class="col-sm-3 control-label">New password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" placeholder="New Password" required="required" name="newpassword" id="newpassword" value="<%= credentialForm.newpassword %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmpassword" class="col-sm-3  text-right">Confirm new Password</label>
                        <div class="col-sm-9">
                            <input type="password" class="form-control" placeholder="Confirm Password" required="required" name="confirmpassword" id="confirmpassword" value="<%= credentialForm.confirmpassword %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-success">Update</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <h5 class="sv_error">
                                <%= error %>
                            </h5>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>